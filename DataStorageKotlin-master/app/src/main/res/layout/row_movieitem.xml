<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:orientation="vertical"
                android:background="@color/colorBackGround">

    <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/ic_launcher"
            android:id="@+id/movieImage"
            android:focusable="false"
            android:focusableInTouchMode="false"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/NameMovie"
            android:textColor="@color/colorText"
            android:textSize="20dp"
            android:layout_toEndOf="@+id/movieImage"
            android:layout_toRightOf="@+id/movieImage"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="22dp"
            android:focusable="false"
            android:focusableInTouchMode="false"/>
    <ImageView
            android:layout_width="60dp"
            android:src="@drawable/heartbroken"
            android:layout_height="44dp" android:id="@+id/favList"
            android:layout_alignParentEnd="true" android:layout_alignParentRight="true"
            android:layout_marginRight="27dp" android:layout_marginEnd="27dp"
            android:layout_marginTop="18dp" android:layout_alignParentTop="true"/>

</RelativeLayout>