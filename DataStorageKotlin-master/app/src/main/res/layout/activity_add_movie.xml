<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Controladores.AddMovieActivity" android:background="@color/colorBackGround">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:gravity="center"
            android:hint="Nombre Pelicula"
            android:ems="10"
            android:textColor="@color/colorText"
            android:textColorHint="@color/colorTextHint"
            android:textColorLink="@color/colorText"
            android:textColorHighlight="@color/colorText"
            android:id="@+id/nombrePeli"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="52dp" app:layout_constraintTop_toBottomOf="@+id/buttonImagePeli"
    />
    <EditText
            android:layout_width="226dp"
            android:layout_height="239dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/sinopsisPeli"
            android:textColor="@color/colorText"
            android:textColorHint="@color/colorTextHint"
            android:textColorLink="@color/colorText"
            android:textColorHighlight="@color/colorText"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:hint="Escribe sinopsis aqui..." app:layout_constraintHorizontal_bias="0.497"
            android:singleLine="true" android:maxLines="10" android:gravity="clip_horizontal"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/nombrePeli"/>
    <Button
            android:text="Agregar"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:id="@+id/agregarPeli"
            android:textColor="@color/colorText"
            android:textColorHint="@color/colorPrimary"
            android:background="@drawable/rounder_corner_button"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/volverAddMovie"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="56dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.547"
            android:onClick="addMovie"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/sinopsisPeli"
            app:layout_constraintVertical_bias="1.0"/>
    <Button
            android:text="Volver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/volverAddMovie"
            android:background="@drawable/rounder_corner_button"
            android:textColor="@color/colorText"
            android:textColorHint="@color/colorPrimary"
            android:onClick="volverAddPeli"

            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="80dp"
            android:layout_marginRight="80dp"
            android:layout_marginBottom="56dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/sinopsisPeli" app:layout_constraintVertical_bias="1.0"/>
    <ImageView
            android:layout_width="219dp"
            android:layout_height="134dp" tools:src="@tools:sample/backgrounds/scenic[16]"
            android:id="@+id/imagePeli"
            android:src="@mipmap/ic_launcher" android:layout_marginTop="28dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.517"/>
    <Button
            android:text="Subir imagen"
            android:onClick="uploadImage"
            android:textColor="@color/colorText"
            android:textColorHint="@color/colorPrimary"
            android:background="@drawable/rounder_corner_button"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonImagePeli" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/imagePeli" app:layout_constraintHorizontal_bias="0.498"/>
</android.support.constraint.ConstraintLayout>