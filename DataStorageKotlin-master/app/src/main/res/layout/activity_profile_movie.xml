<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Controladores.ProfileMovieActivity" android:background="@color/colorBackGround">

    <Button
            android:text="Volver"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/volverPerfilPeli"
            android:ems="10"
            android:onClick="volver"
            android:textColor="@color/colorText"
            android:textColorHint="@color/colorPrimary"
            android:background="@drawable/rounder_corner_button"
            android:layout_marginBottom="100dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.48"
    />
    <TextView
            android:text="TextView"
            android:layout_width="177dp"
            android:layout_height="107dp"
            android:textColor="@color/colorText"
            app:layout_constraintTop_toBottomOf="@+id/nombrePeliProfile"
            android:id="@+id/sinopsisProfile" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginBottom="52dp"
            app:layout_constraintBottom_toTopOf="@+id/volverPerfilPeli"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:textColor="@color/colorText"
            android:id="@+id/nombrePeliProfile" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/sinopsisProfile"
            app:layout_constraintTop_toBottomOf="@+id/fav"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
    />
    <ImageView
            android:layout_width="208dp"
            android:layout_height="158dp" app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/imageMovie" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginTop="92dp" app:layout_constraintTop_toTopOf="parent"
    />
    <ImageView
            android:layout_width="50dp"
            android:src="@drawable/heartbroken"
            android:layout_height="50dp"
            android:id="@+id/fav"
            android:onClick="clickedFav"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.498" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageMovie" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/nombrePeliProfile"/>
</android.support.constraint.ConstraintLayout>